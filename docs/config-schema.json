{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "skillsctl config schema",
  "type": "object",
  "properties": {
    "schemaVersion": { "type": "integer", "enum": [1] },
    "scan": {
      "type": "object",
      "properties": {
        "recursive": { "type": "boolean" },
        "maxDepth": { "type": ["integer", "null"], "minimum": 0 },
        "excludes": { "type": "array", "items": { "type": "string" } },
        "excludeGlobs": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "policy": {
      "type": "object",
      "properties": {
        "strict": { "type": "boolean" },
        "codexSymlinkSeverity": { "type": "string", "enum": ["error", "warning", "info"] },
        "claudeSymlinkSeverity": { "type": "string", "enum": ["error", "warning", "info"] }
      },
      "additionalProperties": false
    },
    "sync": {
      "type": "object",
      "properties": {
        "aliases": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "remote": {
      "type": "object",
      "properties": {
        "baseURL": { "type": "string", "format": "uri" },
        "cacheTTLSeconds": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "features": {
      "type": "object",
      "properties": {
        "skillVerification": { "type": "boolean", "description": "Enable Ed25519 signature and SHA-256 hash verification for skill artifacts" },
        "pinnedPublishing": { "type": "boolean", "description": "Require pinned tool versions with checksums for publishing" },
        "crossIDEAdapters": { "type": "boolean", "description": "Enable multi-target installation for Codex, Claude Code, and GitHub Copilot" },
        "telemetryOptIn": { "type": "boolean", "description": "Opt-in to privacy-first telemetry collection" },
        "bulkActions": { "type": "boolean", "description": "Enable bulk operations (verify all, update all, export changelog)" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
