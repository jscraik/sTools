{
  "name": "skillsinspector",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:cli": "pnpm --filter @skillsinspector/cli build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "pnpm -s build:cli && pnpm -s build && tauri build --debug && node scripts/bundle-cli.js",
    "skillsctl": "node packages/cli/dist/cli.js",
    "lint": "biome check . --diagnostic-level=error",
    "lint:fix": "biome check --write .",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "test": "pnpm --filter @skillsinspector/cli test",
    "test:ci": "pnpm test && pnpm -s typecheck && pnpm -s lint"
  },
  "devDependencies": {
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@storybook/react-vite": "^10.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "biome": "^0.3.3",
    "storybook": "^10.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
